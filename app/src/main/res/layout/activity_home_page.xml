<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.home_page">

    <!-- Main Content Layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/hellotexth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingTop="15dp"
            android:paddingLeft="@dimen/_45sdp"
            android:paddingBottom="15dp"
            android:fontFamily="@font/ubuntu_medium"
            android:text="Hi, "
            android:textColor="?attr/colorAccent"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05" />





        <ImageView
            android:id="@+id/userImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/user_profile_picture"
            android:src="@drawable/accicon"
            android:tint="@null"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:layout_marginStart="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="@id/hellotexth"
            app:layout_constraintBottom_toBottomOf="@id/hellotexth"
            app:layout_constraintStart_toStartOf="parent" />

        <FrameLayout
            android:id="@+id/fragmentContainerh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/animatedBottomBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hellotexth"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginBottom="@dimen/_38sdp"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.getbase.floatingactionbutton.FloatingActionsMenu
                android:id="@+id/layoutquickactiontodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:elevation="8dp"
                app:fab_addButtonSize="normal"
                app:fab_addButtonColorNormal="?attr/colorAccent"
                app:fab_addButtonColorPressed="?attr/colorPrimary"
                android:background="@android:color/transparent"
                app:fab_addButtonPlusIconColor="@color/white">

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/option_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/white"
                    app:fab_addButtonPlusIconColor="?attr/colorOnPrimary"
                    app:fab_colorNormal="?attr/colorPrimary"
                    app:fab_colorPressed="?attr/colorAccent"
                    app:fab_icon="@drawable/baseline_note_add_24" />

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/option_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fab_addButtonPlusIconColor="?attr/colorOnPrimary"
                    app:fab_colorNormal="?attr/colorPrimary"
                    app:fab_colorPressed="?attr/colorAccent"
                    app:fab_icon="@drawable/notification_icon"
                    app:tint="@color/white"/>

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/option_three"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fab_addButtonPlusIconColor="?attr/colorOnPrimary"
                    app:fab_colorNormal="?attr/colorPrimary"
                    app:fab_colorPressed="?attr/colorPrimaryVariant"
                    app:fab_icon="@drawable/baseline_note_add_24"
                    android:background="@drawable/fab_background" />
            </com.getbase.floatingactionbutton.FloatingActionsMenu>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <nl.joery.animatedbottombar.AnimatedBottomBar
            android:id="@+id/animatedBottomBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            app:abb_badgeBackgroundColor="?attr/colorAccent"
            app:abb_badgeAnimation="none"
            app:abb_badgeTextColor="@color/colorAccent"
            app:abb_indicatorAppearance="round"
            app:abb_indicatorColor="?attr/colorAccent"
            app:abb_indicatorHeight="4dp"
            app:abb_indicatorLocation="bottom"
            app:abb_indicatorMargin="2dp"
            android:background="?attr/colorPrimary"
            app:abb_selectedIndex="0"
            app:abb_selectedTabType="text"
            app:abb_tabAnimation="slide"
            app:abb_tabColor="@color/colorAccent"
            app:abb_tabColorSelected="?attr/colorAccent"
            app:abb_tabs="@menu/bottom_nav_menu_try"
            app:abb_textAppearance="@style/CustomText"
            app:abb_textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="@color/colorPrimary"
            android:tint="?attr/colorPrimary"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation Drawer Menu -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/colorAccent"
        app:itemTextColor="@color/colorAccent"
        app:menu="@menu/nav_menu" />
</androidx.drawerlayout.widget.DrawerLayout>

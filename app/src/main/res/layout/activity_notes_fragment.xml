<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayoutmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".Activity.NotesFragment">

    <!-- SwipeRefreshLayout for pull-to-refresh functionality -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/coordinatorLayout"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- ScrollView for Header, Search Box, and Notes RecyclerView -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Wrap content in a LinearLayout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- LinearLayout for Header and Menu -->
                <LinearLayout
                    android:id="@+id/layoutHeaderMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- LinearLayout for "Hello" and "My Notes" -->
                    <LinearLayout
                        android:id="@+id/layoutHeaderText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_8sdp">

                    </LinearLayout>

                    <!-- Menu ImageView -->
                    <ImageView
                        android:id="@+id/menu_main"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:clickable="true"
                        android:enabled="true"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_menu"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Search Box -->
                <LinearLayout
                    android:id="@+id/layoutsearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_9sdp"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:background="@drawable/background_scearch"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp">

                    <ImageView
                    android:id="@+id/ic_search"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:contentDescription="@string/app_name"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_search"
                    app:tint="?attr/colorAccent" />

                    <EditText
                        android:id="@+id/searchEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:background="@null"
                        android:fontFamily="@font/ubuntu"
                        android:hint="@string/search_notes"
                        android:imeOptions="actionDone"
                        android:importantForAutofill="no"
                        android:includeFontPadding="false"
                        android:inputType="text"
                        android:textColorHint="?attr/android:textColorHint"
                        android:textColor="?attr/android:textColor"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/noDataImagenotes"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_75sdp"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/noteRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_120sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Floating Action Button Menu -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/layoutquickactiontodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:elevation="8dp"
            app:fab_addButtonSize="normal"
            app:fab_addButtonColorNormal="?attr/colorAccent"
            app:fab_addButtonColorPressed="?attr/colorPrimary"
            android:background="@android:color/transparent"
            app:fab_addButtonPlusIconColor="@color/white">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/option_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/white"
                app:fab_addButtonPlusIconColor="?attr/colorOnPrimary"
                app:fab_colorNormal="?attr/colorPrimary"
                app:fab_colorPressed="?attr/colorPrimaryVariant"
                app:fab_icon="@drawable/baseline_note_add_24" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/option_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_addButtonPlusIconColor="?attr/colorOnPrimary"
                app:fab_colorNormal="?attr/colorPrimary"
                app:fab_colorPressed="?attr/colorPrimaryVariant"
                app:fab_icon="@drawable/notification_icon"
                app:tint="@color/white"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/option_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_addButtonPlusIconColor="?attr/colorOnPrimary"
                app:fab_colorNormal="?attr/colorPrimary"
                app:fab_colorPressed="?attr/colorPrimaryVariant"
                app:fab_icon="@drawable/baseline_note_add_24"
                android:background="@drawable/fab_background" />
        </com.getbase.floatingactionbutton.FloatingActionsMenu>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.admin_page">

    <!-- ScrollView for Header, Search Box, and Notes RecyclerView -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollViewadmin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Single LinearLayout to contain all views -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- LinearLayout for Header and Menu -->
            <LinearLayout
                android:id="@+id/layoutHeaderMenuadmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- LinearLayout for "Hello" and "My Notes" -->
                <LinearLayout
                    android:id="@+id/layoutHeaderTextadmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="start"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/hellotext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello"
                        android:textSize="20sp"
                        android:fontFamily="@font/ubuntu_medium"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/textadmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/ubuntu_medium"
                        android:includeFontPadding="false"
                        android:text="@string/admin"
                        android:textColor="?attr/android:textColor"
                        android:textSize="@dimen/_24ssp"
                        tools:ignore="TextSizeCheck"/>
                </LinearLayout>
            </LinearLayout>

            <!-- LinearLayout for Search Box -->
            <LinearLayout
                android:id="@+id/layoutsearchadmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_22sdp"
                android:visibility="gone"
                android:background="@drawable/background_scearch"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:backgroundTint="@color/white"
                android:padding="@dimen/_2sdp">

                <ImageView
                    android:id="@+id/ic_search"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_search"
                    android:background="@android:color/transparent"
                    app:tint="?attr/colorPrimaryDark"
                    />

                <EditText
                    android:id="@+id/searchEditTextadmin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:background="@null"
                    android:fontFamily="@font/ubuntu"
                    android:hint="@string/search_notes"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:includeFontPadding="false"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ic_search" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/totalUsersText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/mostActiveUsersText"/>

            <!-- RecyclerView for Notes -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/adminview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/_60sdp"
                android:paddingTop="@dimen/_10sdp"/>

            <!-- LinearLayout for Charts -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:contentPadding="10dp"
                app:cardBackgroundColor="?attr/colorPrimary"
                android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="?attr/colorPrimary"
                android:padding="16dp">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:background="@android:color/transparent"
                    android:textColor="?attr/android:textColor"
                    android:layout_marginBottom="16dp" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/colorPrimary"
                    android:background="@android:color/transparent"
                    android:layout_height="300dp" />
            </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

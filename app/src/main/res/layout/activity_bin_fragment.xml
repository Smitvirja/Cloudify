<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activity.Bin_fragment">


    <!-- CoordinatorLayout for BottomAppBar and FloatingActionButton -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollViewBin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <!-- Wrap content in a LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <!-- LinearLayout for Header and Menu -->
            <LinearLayout
                android:id="@+id/layoutHeaderMenuBin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- LinearLayout for "Bin" Header -->
                <LinearLayout
                    android:id="@+id/layoutHeaderTextBin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_8sdp">


                </LinearLayout>

                <!-- Menu ImageView -->
                <ImageView
                    android:id="@+id/menu_bin"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:enabled="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_menu"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- LinearLayout for Search Box -->
            <LinearLayout
                android:id="@+id/layoutSearchBin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_22sdp"
                android:background="@drawable/background_scearch"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_2sdp">

                <ImageView
                    android:id="@+id/ic_search_bin"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:contentDescription="@string/app_name"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_search"
                    app:tint="?attr/colorAccent" />

                <EditText
                    android:id="@+id/searchBinEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:background="@null"
                    android:fontFamily="@font/ubuntu"
                    android:hint="Search Deleted Notes"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:includeFontPadding="false"
                    android:inputType="text"
                    android:textColor="?attr/android:textColor"
                    android:textColorHint="?attr/android:textColorHint"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ic_search_bin" />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:id="@+id/clearnotes"
                android:src="@drawable/recycle_bin"
                android:layout_gravity="right"
                android:layout_marginEnd="@dimen/_16sdp"
                app:tint="@color/colorAccent"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <!-- RecyclerView for Deleted Notes -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/binRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:clipToPadding="false"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_60sdp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>